{
    "workshop": {
        "schema": {
            "version": "2020.03.02"
        }
    },
    "userenvs": [
	    {
	        "name": "default",
	        "requirements": [
                "uperf_src"
	        ]
	    }
    ],
    "requirements": [
	    {
	        "name": "uperf_src",
	        "type": "source",
	        "source_info": {
		        "url": "https://github.com/uperf/uperf/archive/refs/tags/v1.0.8.tar.gz",
		        "filename": "uperf_src.tar.gz",
		        "commands": { 
		            "unpack": "tar -xzf uperf_src.tar.gz",
		            "get_dir": "tar -tzf uperf_src.tar.gz | head -n 1",
		            "commands": [
			            "autoreconf --install",
			            "CFLAGS=\"-ggdb\" ./configure --disable-sctp",
			            "make",
			            "make install",
			            "ldconfig",
			            "/usr/local/bin/uperf -V"
		            ]
                }
	        }
        }
    ]
}
